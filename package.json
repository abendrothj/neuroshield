{
  "name": "neurashield",
  "version": "1.0.0",
  "description": "Comprehensive cybersecurity platform with AI and blockchain technology",
  "main": "index.js",
  "engines": {
    "node": ">=18.19.1",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "docker compose up",
    "start:prod": "NODE_ENV=production docker compose up -d",
    "start:dev": "NODE_ENV=development docker compose up",
    "stop": "docker compose down",
    "setup:dev": "bash scripts/set-environment.sh dev",
    "setup:prod": "bash scripts/set-environment.sh prod",
    "deploy:k8s": "bash k8s/deploy.sh",
    "test": "jest",
    "test:websocket": "node backend/tests/websocket.test.js",
    "test:performance:ai-model": "node backend/tests/performance/ai-model.test.js",
    "test:security:sql-injection": "node backend/tests/security/sql-injection.test.js",
    "test:load:api": "node backend/tests/load/api.test.js",
    "system-test": "bash scripts/system-test.sh",
    "perf-test": "bash scripts/performance-benchmark.sh",
    "security-test": "bash scripts/security-audit.sh",
    "uat": "bash scripts/user-acceptance-test.sh",
    "audit": "npm audit --production",
    "audit:fix": "npm audit fix --production",
    "deps:check": "npx depcheck",
    "lint": "eslint .",
    "migrate:pages-to-app": "bash scripts/migrate-pages-to-app.sh",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/neurashield.git"
  },
  "keywords": [
    "cybersecurity",
    "ai",
    "blockchain",
    "threat-detection"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "depcheck": "^1.4.7"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{json,md}": "prettier --write"
  }
} 